@model Company;


@section MoreScripts{
    <script src="~/lib/moment/moment.min.js"></script>
    <link href="~/lib/dtpicker/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <script src="~/lib/dtpicker/js/tempusdominus-bootstrap-4.min.js"></script>
}

<form asp-controller="Company"
      asp-action="Create"
      method="post">

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <h1>Registration</h1>
        </div>
    </div>


    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <h3>Create Company Account</h3>
        </div>
    </div>


    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="UserName">User Name : </label>
        <div class="col-sm-6">
            <input type="text" asp-for="UserName" class="form-control" />
        </div>
        <div class="col-sm-2">
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="User_PW">Password : </label>
        <div class="col-sm-6">
            <input type="password" asp-for="User_PW" class="form-control" />
        </div>
        <div class="col-sm-2">
            <span asp-validation-for="User_PW" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="ConfirmPassword">Confirm : </label>
        <div class="col-sm-6">
            <input type="password" asp-for="ConfirmPassword" class="form-control" />
        </div>
        <div class="col-sm-2">
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <h3>Company Profile</h3>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="CompanyName">Name : </label>
        <div class="col-sm-6">
            <input type="text" asp-for="CompanyName" class="form-control" />
        </div>
        <div class="col-sm-2">
            <span asp-validation-for="CompanyName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="CompanyWebsite">Website : </label>
        <div class="col-sm-6">
            <input type="text" asp-for="CompanyWebsite" class="form-control" />
        </div>
        <div class="col-sm-2">
            <span asp-validation-for="CompanyWebsite" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="CompanyIndustry">Industry : </label>
        <div class="col-sm-6">
            <select asp-for="CompanyIndustry" class="form-control">
                <option value="">-- Select --</option>
                <option value="F&B">Food & Beverage</option>
                <option value="Media">Digital Media</option>
                <option value="HealthTech">HealthTech</option>
                <option value="Security">Security</option>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="CompanySize">Size : </label>
        <div class="col-sm-6">
            <select asp-for="CompanySize" class="form-control">
                <option value="">-- Select --</option>
                <option value="1-10">1-10 Employees</option>
                <option value="11-50">11-50 Employees</option>
                <option value="51-100">51-100 Employees</option>
            </select>
        </div>
    </div>


    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <h3>Representative Profile</h3>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="RepName">Full Name : </label>
        <div class="col-sm-6">
            <input type="text" asp-for="RepName" class="form-control" />
        </div>
        <div class="col-sm-2">
            <span asp-validation-for="RepName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Contact_Num">Contact Number :</label>
        <div class="col-sm-6">
            <input type="text" asp-for="Contact_Num" class="form-control" />
        </div>
        <div class="col-sm-2">
            <span asp-validation-for="Contact_Num" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Email">Email :</label>
        <div class="col-sm-6">
            <input type="email" asp-for="Email" class="form-control" />
        </div>
        <div class="col-sm-2">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="alert alert-@ViewData["MsgType"]">
                <text>@ViewData["Message"]</text>
            </div>
        </div>
    }





</form>

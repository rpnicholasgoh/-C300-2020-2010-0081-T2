<form asp-controller="Company"
      asp-action="Edit"
      method="post">

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <h3>Edit Company Account</h3>
        </div>
    </div>

    <input asp-for="UserName" hidden />

    @*<div class="form-group row">
        <label class="control-label col-sm-2" asp-for="UserName"></label>
        <div class="col-sm-6">
            <input type="hidden" asp-for="UserName" class="form-control" hidden />
        </div>
        <div class="col-sm-2">
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>*@

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="CompanyName">Name : </label>
        <div class="col-sm-6">
            <input type="text" asp-for="CompanyName" class="form-control" readonly="readonly" />
        </div>
        <div class="col-sm-2">
            <span asp-validation-for="CompanyName" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="CompanyType">User Type :</label>
        <div class="col-sm-6">
            <select asp-for="CompanyType" class="form-control">
                <option value="">-- Select --</option>
                <option value=2>Current</option>
                <option value=3>Alumni</option>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Edit" class="btn btn-primary" />
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="alert alert-@ViewData["MsgType"]">
                <text>@ViewData["Message"]</text>
            </div>
        </div>
    }


</form>
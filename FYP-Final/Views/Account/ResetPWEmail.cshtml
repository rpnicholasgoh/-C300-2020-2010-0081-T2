@model ResetPWEmail

@section MoreScripts{

    <script src="~/lib/moment/moment.min.js"></script>
    <link href="~/lib/dtpicker/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <script src="~/lib/dtpicker/js/tempusdominus-bootstrap-4.min.js"></script>
}

<form asp-controller="Account"
      asp-action="ResetPWEmail"
      method="post">


    <div class="offset-sm-4 col-sm-4 justify-content-center mb-5 mt-5">
        <div class="card">
            <article class="card-body">
                <h3 class="card-title text-center mb-4 mt-1">Reset Password</h3>
                <hr />

                <p class="text-success text-center">Please enter your email address for verification.</p>


                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-user"></i></span>
                            <input asp-for="Email" class="form-control" placeholder="XYZ@gmail.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <input type="submit" class="btn btn-primary btn-block" value="Verify" />

            </article>
        </div>
    </div>
</form>
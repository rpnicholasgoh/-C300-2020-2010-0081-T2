@model ResetPW

@section MoreScripts{

    <script src="~/lib/moment/moment.min.js"></script>
    <link href="~/lib/dtpicker/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <script src="~/lib/dtpicker/js/tempusdominus-bootstrap-4.min.js"></script>
}

<form asp-controller="Account"
      asp-action="ResetPWActivate"
      method="post">

    <div class="offset-sm-4 col-sm-4 justify-content-center mb-5 mt-5">
        <div class="card">
            <article class="card-body">
                <h4 class="card-title text-left mb-4 mt-1">Password reset</h4>
                <hr>
                <p class="text-success text-center">Password has been reset successfully!</p>
                <text>Click <a href="~/Account/Login">here</a> to return to the Login page.</text>
            </article>
        </div>
    </div>

</form>

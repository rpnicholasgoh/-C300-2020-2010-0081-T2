@model Login

@section MoreScripts{

    <script src="~/lib/moment/moment.min.js"></script>
    <link href="~/lib/dtpicker/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <script src="~/lib/dtpicker/js/tempusdominus-bootstrap-4.min.js"></script>
}

<form asp-controller="Account"
      asp-action="Login"
      method="post">

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-9">
            <h1>Welcome to Tribe Accelerator!</h1>
        </div>
    </div>

    <div class="form-group-row">
        <div class="col-sm-2 col-sm-4">
            <h2>Please Sign In</h2>
        </div>
    </div>


    <div class=form-group-row>
        <label class="control-label col-sm-2" asp-for="UserName">User Name : </label>
        <div class="col-sm-4">
            <input type="text" asp-for="UserName" class="form-control" />
        </div>
        <div class="col-sm-2">
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>


    <div class=form-group-row>
        <label class="control-label col-sm-2" asp-for="Password">Password : </label>
        <div class="col-sm-4">
            <input type="password" asp-for="Password" class="form-control" />
        </div>
        <div class="col-sm-2">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>

    <div class="col-sm-4">
        <div class="form-group row">
            <div class="form-check">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label">
                    Remember Me
                </label>
            </div>
        </div>
    </div>


    <div class="col-sm-4">
        <a href="http://localhost:58944/Account/ResetPWEmail" class="Button">Forgot Password?</a>
    </div>


    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="alert alert-@ViewData["MsgType"]">
                <text>@ViewData["Message"]</text>
            </div>
        </div>
    }

    <div class="form-group row">
        <input type="submit" class="btn btn-primary" value="Login" />
    </div>

</form>




@model ResetPW

@section MoreScripts{

    <script src="~/lib/moment/moment.min.js"></script>
    <link href="~/lib/dtpicker/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <script src="~/lib/dtpicker/js/tempusdominus-bootstrap-4.min.js"></script>
}

<form asp-controller="Account"
      asp-action="ResetPW"
      method="post">

    <h2>Reset Password</h2>

    @*<div class="form-group row">
        <label class="control-label col-sm-2" asp-for="UserName">User Name : </label >
        <div class="col-sm-6">
            <input type="text" asp-for="UserName" class="form-control"/>
        </div>
        <div class="col-sm-2">
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>*@

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="User_PW_New">New Password : </label>
        <div class="col-sm-6">
            <input type="password" asp-for="User_PW_New" class="form-control" />
        </div>
        <div class="col-sm-2">
            <span asp-validation-for="User_PW_New" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="ConfirmPasswordNew">Confirm New Password : </label>
        <div class="col-sm-6">
            <input type="password" asp-for="ConfirmPasswordNew" class="form-control" />
        </div>
        <div class="col-sm-2">
            <span asp-validation-for="ConfirmPasswordNew" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Confirm" class="btn btn-primary" />
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="alert alert-@ViewData["MsgType"]">
                <text>@ViewData["Message"]</text>
            </div>
        </div>
    }

</form>
